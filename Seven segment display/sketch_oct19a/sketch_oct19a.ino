#define c 4
#define d 5
#define e 6
#define f 7
#define g 8
#define dot 9


void setup() {
  // put your setup code here, to run once:
  pinMode(a, OUTPUT);
  pinMode(b, OUTPUT);
  pinMode(c, OUTPUT);
  pinMode(d, OUTPUT);
  pinMode(e, OUTPUT);
  pinMode(f, OUTPUT);
  pinMode(g, OUTPUT);
  pinMode(dot, OUTPUT);

}

void loop() {
  
for(uint8_t i = 0; i < 10; i++) {
  display_seven_seg(i, i%2);
  delay(1000);
}
  
}


